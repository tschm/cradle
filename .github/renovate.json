{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>tschm/renovate-config:pre-commit.js"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "pyproject.toml"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "Python main dependencies",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchFileNames": [
        "pyproject.toml"
      ],
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "groupName": "Python dev dependencies",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchFileNames": [
        "requirements*.txt"
      ],
      "groupName": "Python requirements",
      "schedule": [
        "every weekend"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major-update"
      ],
      "automerge": false
    }
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardLabels": [
    "dependencies"
  ],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 16,
  "rangeStrategy": "pin",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "respectLatest": true,
  "ignoreUnstable": true,
  "ignoreDeprecated": false,
  "rebaseWhen": "behind-base-branch",
  "rebaseLabel": "rebase"
}
